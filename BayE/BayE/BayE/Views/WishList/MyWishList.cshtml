@model IEnumerable<BayE.Entities.Ad>
@{
    ViewData["Title"] = "MyWishList";
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
    <link rel="stylesheet" href="~/css/searchDisabler.css">

    <!--ICON LIBRARY-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <h1>My Wishlist</h1>
    <div class="container-fluid dark-grey-text mt-5">
        <div class="row">
            <!-- Page Content -->
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            @foreach (var ad in Model)
                            {
                                <div class="col-lg-4 col-md-6 mb-3">
                                    <div class="card product-card h-100 ">
                                        <a href="#"><img class="card-img-top picture-shadow" style="object-fit:scale-down;height:320px;" src="~/ads/@ad.Id/index/indexPicture.png" alt="" onerror="this.onerror = null;this.src='/ads/image-missing.png'" ;"></a>
                                        <div class="card-body">
                                            <h4 class="card-title">
                                                <a href="/Ad/@ad.Id">@ad.Title</a>
                                            </h4>
                                            <h5>@ad.Price&euro;</h5>
                                            <p class="card-text">@ad.Description</p>
                                        </div>
                                        <div class="card-footer border-top-0">
                                            <ul class="list-group">
                                                <li class="list-inline-item">
                                                    <!--<small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>-->
                                                    <div class="btn-group pull-right">
                                                        <form method="post" action=""><button class="btn " type="submit" onclick="deleteConfirm()"><i class="fa fa-trash"></i></button></form>
                                                    </div>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function deleteConfirm() {
            var r = confirm("Do you really want to delete this ad?");
            if (r) {
            }
            else {
                this.event.preventDefault();
            }
        }
    </script>
</body>

</html>
